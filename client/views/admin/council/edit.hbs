<div class="col-md-8" id="councilPanel">

    <form method="POST" action="/admin/councils/edit/{{council.id}}" id="formEditCouncil">

        <div class="form-group row">
            <label for="inputCouncilName" class="col-sm-3 col-form-label">Namn på råd</label>
            <div class="col-sm-9">
                <input name="councilName" type="text" class="form-control" id="inputCouncilName" value="{{council.name}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputComments" class="col-sm-3 col-form-label">Beskrivning</label>
            <div class="col-sm-9">
                <textarea name="description" type="text" class="form-control" id="inputComments" rows="5">{{council.description}}</textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputStudents" class="col-sm-3 col-form-label">Antal önskade studenter</label>
            <div class="col-sm-9">
                <input name="students" type="number" class="form-control" value="{{council.studentPositions}}" min="0" max="10" id="inputStudents">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPhds" class="col-sm-3 col-form-label">Antal doktorander</label>
            <div class="col-sm-9">
                <input name="phd" type="number" class="form-control" value="{{council.phdPositions}}" min="0" max="10" id="inputPhds">
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-9">
                <button type="submit" form="formEditCouncil" class="btn btn-primary" id="btnEditCouncil">Uppdatera råd</button>
            </div>
        </div>
    </form>
</div>
