    {{#if student}}
    <h3>{{student.firstName}} {{student.lastName}}</h3>
    <div class="form-group row">
      <label class="col-sm-3 col-form-label">Födelsedatum</label>
      <div class="col-sm-9">
        {{student.birthDate}}
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 col-form-label">Telefonnummer</label>
      <div class="col-sm-9">
        {{student.phone}}
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 col-form-label">Email</label>
      <div class="col-sm-9">
        {{student.email}}
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 col-form-label">Program</label>
      <div class="col-sm-9">
        {{student.program}}
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 col-form-label">Examensår</label>
      <div class="col-sm-9">
        {{student.graduationYear}}
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 col-form-label">Doktorand</label>
      <div class="col-sm-9">
        {{#if student.phd}}
        Ja
        {{else}}
        Nej
        {{/if}}
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-3 col-form-label">Om personen</label>
      <div class="col-sm-9">
        {{student.comments}}
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-9">
        <a href="/admin/student/edit/{{student.id}}" class="btn btn-primary" id="btnSubmit">Redigera information</a >
      </div>
    </div>

    {{/if}}
</div>
